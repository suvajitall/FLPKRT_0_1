pipeline {
    agent any

    tools {
        maven 'Maven 3.9.9' // Or the name of your Maven installation in Jenkins
        jdk 'JDK 11'        // Or whatever version you use
    }

    environment {
        // Optional: set environment variables if needed
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/suvajitall/FLPKRT_FuntionalTest_v_0_1.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Generate Reports') {
            steps {
                // If using cucumber-reporting plugin, or similar
                sh 'mvn verify'
            }
        }
    }

    post {
        always {
            // Archive test reports, e.g., cucumber.json or HTML
            junit 'target/surefire-reports/*.xml'
            archiveArtifacts artifacts: 'target/**/*.html', allowEmptyArchive: true
        }
    }
}
