pipeline {
    agent any

    tools {
        maven 'Maven 3.9.9' // Make sure this name matches your Jenkins config
        jdk 'JDK 11'        // Same here
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/suvajitall/FLPKRT_FuntionalTest_v_0_1.git'
                echo 'Checkout complete'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
                echo 'Build complete'
            }
        }

        stage('Test') {
            steps {
                echo 'Hello from Jenkins!'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
                echo 'Tests executed'
            }
        }

        stage('Generate Reports') {
            steps {
                sh 'mvn verify'
                echo 'Reports generated'
            }
        }
    }

    post {
        always {
            junit 'target/surefire-reports/*.xml'
            archiveArtifacts artifacts: 'target/**/*.html', allowEmptyArchive: true
        }
    }
}
